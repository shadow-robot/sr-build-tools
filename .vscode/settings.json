{
    // Path to a local checkout of Shadow's build tools; used in multiple tasks
    "shadowRobot.buildToolsDir": "/home/user/sr-build-tools",
    // Clang tidy settings. Disable it entirely, or some of it's checks, if it's eating too many resources.
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.exclude": {
        "build/**": true,
        "devel/**": true,
    },
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "bugprone-*",
        "clang-analyzer-*",
        "concurrency-*",
        "cppcoreguidelines-*",
        "google-*",
        "misc-*",
        "modernize-*",
        "performance-*",
        "readability-*",
    ],
    "editor.rulers": [120],
    // Ensures all git repos are detected
    "git.autoRepositoryDetection": "subFolders",
    "git.repositoryScanMaxDepth": 4,
    // Tell python extension where to find ROS packages
    "python.autoComplete.extraPaths": [
        "/home/user/projects/shadow_robot/base/devel/lib/python3/dist-packages",
        "/home/user/projects/shadow_robot/base_deps/devel/lib/python3/dist-packages",
        "/opt/ros/noetic/lib/python3/dist-packages"
    ],
    "python.analysis.extraPaths": [
        "/home/user/projects/shadow_robot/base/devel/lib/python3/dist-packages",
        "/home/user/projects/shadow_robot/base_deps/devel/lib/python3/dist-packages",
        "/opt/ros/noetic/lib/python3/dist-packages"
    ],
    // Enables automatic linting of python files
    "python.linting.enabled": true,
    // Configure pylint to match Shadow's CI configuration
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["-s", "n", "-j0", "--rcfile=/home/user/sr-build-tools/ansible/roles/ci/code_style_check/python/files/pylintrc"],
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    // Configure pycodestyle to match ROSlint configuration
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [],
    "python.linting.pycodestylePath": "/opt/ros/noetic/lib/roslint/pycodestyle"
}
